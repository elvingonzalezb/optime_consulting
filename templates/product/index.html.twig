{% extends 'base.html.twig' %}

{% block title %}{{ parent()}} - Product{% endblock %}

{% block body %}
{{ parent() }}
<div class="container mt-5">
    <div class="row mb-2">
        <div class="col-sm-6 col-12">
            <h1>New product</h1>      
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-9 col-9">
            {% for message in app.flashes('exito') %}
                <div class="alert alert-success">
                {{ message }}
                </div>
            {% endfor %}
                <div class="abs-center">
                    <div class="card">
                        <div class="card-header">             
                        {{ form(form_product) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-3">
            {% for message in app.flashes('exito') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
            {% endfor %}
            <div class="card">
                <div class="card-header">
                    Categorias
                        <div class="boton-new-category">
                            <a class="btn btn-info btn-sm" title="New category" href="{{ path('category') }}"> <i class="fa fa-save"></i></a>
                        </div>
                </div>
                <div class="card-body">              
                    {% for cat in categorys %}               
                    <a class="titulo-category" href="{{ path('edit_category', {id:cat.id}) }}"> 
                    <i class="fa fa-check check-category mt-1"></i><p class="card-text">{{ cat.name }}</p>
                    </a>
                    {% endfor %}
                </div>
            </div>
        </div>

    </div>      
</div>
{% endblock %}
